<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.splash.SplashActivity">

    <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_centerVertical="true"
            android:id="@+id/splashActivity_layout_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/splashActivity_iv_hoodie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/hoodie"/>

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/splashActivity_iv_hoodie"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@id/splashActivity_iv_hoodie"
                android:src="@drawable/jeans"/>

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@id/splashActivity_iv_hoodie"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/splashActivity_iv_hoodie"
                android:src="@drawable/hat"/>

    </RelativeLayout>

    <TextView
            android:layout_marginBottom="20dp"
            android:layout_above="@id/splashActivity_layout_logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/splashActivity_tv_description"
            android:gravity="left"
            android:maxLines="3"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/rudiment"
            android:inputType="textMultiLine"
            android:text="Today I Dressed Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="v 2.0"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>